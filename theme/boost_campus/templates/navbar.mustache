{{!

    @template theme_boost_campus/navbar

    This template renders the top navbar.

    Example context (json):
    {
        "output": {
            "should_display_navbar_logo": true,
            "get_compact_logo_url": "http://placekitten.com/50/50",
            "custom_menu": "<li>..</li>",
            "page_heading_menu": "<li>..</li>",
            "search_box": "<div><input type='text'></div>",
            "navbar_plugin_output": "<div class='dropdown'>Messaging</div>",
            "user_menu": "<div class='dropdown'>John Doe</div>"
        },
        "config": {
            "wwwroot": "#"
        },
        "sitename": "Moodle Site"
    }
}}
{{!
    Modifications:
    * Add class bg-white or bg-dark to the navbar dependent on the setting darknavbar.
}}

<nav class="fixed-top navbar navbar-light {{#darknavbar}}bg-dark{{/darknavbar}} {{^darknavbar}}bg-white{{/darknavbar}} navbar-expand moodle-has-zindex" aria-label="{{#str}}sitemenubar, admin{{/str}}">

        <div data-region="drawer-toggle" class="d-inline-block mr-3">
            <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="drawer" type="button" class="btn nav-link float-sm-left mr-1 btn-light bg-gray" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav">{{#pix}}i/menubars{{/pix}}<span class="sr-only">{{#str}}sidepanel, core{{/str}}</span></button>
        </div>

        <a href="https://www.ulpgc.es/" class="navbar-brand aabtn {{# output.should_display_navbar_logo }}has-logo{{/ output.should_display_navbar_logo }}
            {{^ output.should_display_navbar_logo }}
                d-none d-sm-inline
            {{/ output.should_display_navbar_logo }}
                ">
            {{# output.should_display_navbar_logo }}
                <span class="logo d-none d-sm-inline">
                    <img src="{{output.get_compact_logo_url}}" alt="{{ulpgc}}"  title="{{ulpgc}}">
                </span>
            {{/ output.should_display_navbar_logo }}
        </a>

        <ul class="navbar-brand site-name nav navbar-nav d-none d-md-flex">
            <!-- custom_site_menu -->
            {{{ output.custom_site_menu }}}
            <!-- page_heading_menu -->
            {{{ output.page_heading_menu }}}
        </ul>
        <ul class="nav navbar-nav ml-auto">
            <!-- search_box -->
            <li class="nav-item d-none d-lg-block">
            {{{ output.search_box }}}
            </li>            
            <li id="correo_ulpgc" class="nav-item d-none d-lg-block">
                <a href="https://correo.ulpgc.es/"><span class="ico_correo"  title="{{email}}"></span></a>
            </li>
            <!-- language_menu (include li tags) -->
            <li class="dropdown nav-item d-none d-lg-block">
                {{{ output.language_menu }}} 
            </li>
            <!-- navbar_plugin_output -->
            <li class="nav-item">
                {{{ output.navbar_plugin_output }}}
            </li>
            <!-- user_menu -->
            <li class="nav-item d-flex align-items-center">
                {{{ output.user_menu }}}
            </li>
        </ul>
        <div id="bloque_dch_cabecera" class="d-none d-sm-inline">
            <div class="fila_enlaces" id="enlaces_ulpgc">
				<ul class="enlaces_cabecera">
                    <li class="ultimo"><a href="{{{ output.logout }}}" class="desconectar"><span class="ico_desconectar" title="{{logout}}" ></span></a></li>
                    <li class="boton_ulpgc"><a href="https://www2.ulpgc.es/index.php?pagina=miulpgc&ver=miulpgc" class="miulpgc"><span class="ico_miulpgc"></span>MiULPGC</a></li>
				</ul>
				<div class="clearer"></div>	
			</div>
        </div>        
</nav>
