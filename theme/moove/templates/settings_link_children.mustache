{{!
    @template theme_moove/settings_link_children

    Displays the admin tree as a list of grouped links, just the children part.

    Example context (json):
    {
        "node": {
            "text": "Root of menu",
            "key": "test0",
            "action": "https://mymoodle.org/action",
            "display": true,
            "children": [
                {
                    "text": "Child of menu",
                    "key": "test1",
                    "action": "https://mymoodle.org/action",
                    "display": true,
                    "children": []
                }
            ]
        }
    }
}}
<div class="row">
    <div class="col-sm-4">
        {{#action}}<h4><a href="{{action}}">{{text}}</a></h4>{{/action}}
        {{^action}}<h4>{{text}}</h4>{{/action}}
    </div>
    <div class="col-sm-8">
        <ul class="list-unstyled">
            {{#children}}
                {{#display}}
                    {{^children.count}}
                        <li><a href="{{{action}}}">
                            {{> theme_moove/menuitemicon}}
                            {{text}}</a>
                        </li>
                    {{/children.count}}
                {{/display}}
            {{/children}}
        </ul>
    </div>
</div>
